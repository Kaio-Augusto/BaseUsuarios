@using BaseUsuarios.Enums
@model List<UsuarioModel>
@{
    ViewData["Title"] = "Lista de Usuarios";
}
<div class="text-center">
    
    <div class="d-grip gap-2 d-flex justify-content-between">

        <a class="btn btn-outline-success role="button" asp-controller="Usuario" asp-action="Criar">Criar usuário</a>
        <a class="btn btn-outline-danger" role="button" asp-controller="Usuario" asp-action="ApagarTodos">Apagar todos os usuários</a>

    </div>
    <br />


    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <h1> Listagem de Usuários</h1>
    <br />
    <br />

    <table class="table" id="table-1">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">CPF</th>
                <th scope="col">Login</th>
                <th scope="col">Data de Cadastro</th>
                <th scope="col">Data de Alteração</th>
                <th scope="col">Nascimento</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var usuario in Model)
                {
                    <tr>
                        <th scope="row">@usuario.Id</th>
                        <td>@usuario.Nome</td>
                        <td>@usuario.CPF</td>
                        <td>@usuario.Login</td>
                        <td>@usuario.DataDeCadastro</td>
                        <td>@usuario.DataAlteracao</td>
                        <td>@usuario.DataDeNascimento</td>

                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-outline-warning" asp-route-id="@usuario.Id" asp-controller="Usuario" asp-action="Editar"> Editar </a>
                                <a role="button" class="btn btn-outline-danger" asp-route-id="@usuario.Id" asp-controller="Usuario" asp-action="ApagarConfirmacao"> Apagar </a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>